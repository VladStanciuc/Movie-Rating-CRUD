@model proiect.ViewModels.FilmViewModel
@{
    ViewBag.Title = "New";
}

<h2>Film</h2>

@using (Html.BeginForm("Save", "Film", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Nume)
        @Html.TextBoxFor(m => m.Nume, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Gen)
        @Html.DropDownListFor(m => m.Gen, new SelectList(Model.Genuri), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataLansare)
        @Html.TextBoxFor(m => m.DataLansare, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Durata)
        @Html.TextBoxFor(m => m.Durata, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CasaProductie)
        @Html.ListBoxFor(m => m.CasaProductie, new SelectList(Model.CaseProductie), new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.FilmID)
    @Html.HiddenFor(m => m.GenID)

    <button id="Button" type="submit" name="submit" formmethod="post" class="btn btn-secondary btn-sm">Save</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}